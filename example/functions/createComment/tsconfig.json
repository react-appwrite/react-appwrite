{
  "compilerOptions": {
    "target": "ES5",
    "lib": [
      "ES2017"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": false,
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
  ]
}